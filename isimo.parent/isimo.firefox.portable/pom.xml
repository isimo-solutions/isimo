<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <properties>
	<firefox.version>70.0.1</firefox.version>
  </properties>
  	<parent>
		<groupId>com.isimo</groupId>
		<artifactId>isimo.parent</artifactId>
		<version>2.3-Sel-3.141.59-SNAPSHOT</version>
	</parent>
  <artifactId>isimo.firefox.portable</artifactId>
  <profiles>
  		<profile>
			<id>downloadfirefox</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.8</version>
						<executions>
							<execution>
								<phase>generate-resources</phase>
								<configuration>
									<target>
										<path id="p.classpath">
											<pathelement path="${mvn.test.classpath}" />
										</path>
										<taskdef classpathref="p.classpath" resource="net/sf/antcontrib/antlib.xml" />
										<if>
											<not><available file="${project.build.directory}/FirefoxPortable64-${firefox.version}.zip"/></not>
											<then>
												<get src="https://www.firefox-usb.com/download/FirefoxPortable64-${firefox.version}.zip" dest="${project.build.directory}/FirefoxPortable64-${firefox.version}.zip"/>
											</then>
										</if>
										<mkdir dir="${project.build.directory}/generated-sources"/>
										<unzip src="${project.build.directory}/FirefoxPortable64-${firefox.version}.zip" dest="${project.build.directory}/generated-sources"/>
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
						<dependencies>
							<dependency>
								<groupId>ant-contrib</groupId>
								<artifactId>ant-contrib</artifactId>
								<version>1.0b3</version>
								<exclusions>
									<exclusion>
										<artifactId>ant</artifactId>
										<groupId>ant</groupId>
									</exclusion>
								</exclusions>
							</dependency>
						</dependencies>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>build-helper-maven-plugin</artifactId>
						<version>3.0.0</version>
						<executions>
							<execution>
								<phase>generate-resources</phase>
								<goals>
									<goal>add-resource</goal>
								</goals>
								<configuration>
									<resources>
										<resource><directory>${project.build.directory}/generated-sources/FirefoxPortable64</directory></resource>
									</resources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
  </profiles>
</project>